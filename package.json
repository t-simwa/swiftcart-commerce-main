{
  "name": "swiftcart-monorepo",
  "version": "1.0.0",
  "description": "SwiftCart E-Commerce Platform - Full Stack Monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter swiftcart-backend dev\" \"pnpm --filter swiftcart-frontend dev\"",
    "dev:backend": "pnpm --filter swiftcart-backend dev",
    "dev:frontend": "pnpm --filter swiftcart-frontend dev",
    "build": "pnpm --filter swiftcart-backend build && pnpm --filter swiftcart-frontend build",
    "build:backend": "pnpm --filter swiftcart-backend build",
    "build:frontend": "pnpm --filter swiftcart-frontend build",
    "install:all": "pnpm install",
    "seed": "pnpm --filter swiftcart-backend seed",
    "start": "pnpm --filter swiftcart-backend start",
    "lint": "pnpm --filter swiftcart-frontend lint",
    "clean": "rm -rf node_modules swiftcart-backend/node_modules swiftcart-frontend/node_modules swiftcart-backend/dist swiftcart-frontend/dist .pnpm-store"
  },
  "keywords": [
    "ecommerce",
    "full-stack",
    "react",
    "nodejs",
    "mongodb",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

