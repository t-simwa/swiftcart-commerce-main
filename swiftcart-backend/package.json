{
  "name": "swiftcart-backend",
  "version": "1.0.0",
  "description": "Backend API for SwiftCart E-Commerce Platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seed": "tsx src/scripts/seed.ts",
    "seed:products": "tsx src/scripts/seedProducts.ts",
    "seed:reset": "tsx src/scripts/resetAndReseedProducts.ts",
    "seed:amazon": "tsx src/scripts/seedProductsAmazon.ts",
    "seed:manual": "tsx src/scripts/seedManualProducts.ts",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:down": "tsx src/scripts/migrate.ts down",
    "lint": "eslint src --ext .ts",
    "track:products": "node src/scripts/utils/generateProductTracking.js",
    "fetch:images": "tsx src/scripts/fetchProductImages.ts",
    "generate:image-urls": "tsx src/scripts/generateImageSearchUrls.ts",
    "download:images": "tsx src/scripts/downloadSelectedImages.ts",
    "auto:images": "tsx src/scripts/autoDownloadProductImages.ts",
    "scrape:amazon-images": "tsx src/scripts/scrapeAmazonImages.ts",
    "test:mongo": "tsx src/scripts/testMongoConnection.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "ecommerce",
    "api",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^9.2.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.6.12",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^3.0.4",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/socket.io": "^3.0.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "@jest/globals": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "mongodb-memory-server": "^9.1.3"
  }
}
